package com.github.propra13.gruppe43;

public class Game {
	//Levels des Spiels, und der Index des momentan aktiven Levels
	int currentLevelId = 0;
	Level[] levels = new Level[3];
	//Figur des Spielers
	Player player;
	
	
	public Game() {
		player = new Player();
		levels[0].init("level1.txt");
		levels[1].init("level2.txt");
		levels[2].init("level3.txt");		
		
		
	}
	
	
	//führt den nächsten Schritt des Spiels aus;
	public void gameUpdate() {
		player.act();
		
	}

}
