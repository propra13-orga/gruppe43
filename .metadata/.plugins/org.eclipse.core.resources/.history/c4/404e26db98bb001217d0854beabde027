package com.github.propra13.gruppe43;

public class Game {
	//Anzahl der Levels, Levels des Spiels, und der Index des momentan aktiven Levels
	final static int LEVEL_COUNT = 3;
	int currentLevelId = 0;
	Level[] levels = new Level[LEVEL_COUNT];
	String[] lvlpath = {"level1.txt", "level2.txt", "level3.txt"};
	//Figur des Spielers
	Player player;
	
	
	
	public Game() {
		player = new Player();
		for (int i = 0; i<LEVEL_COUNT;i++) {
		levels[i] = new Level();
		levels[i].init(lvlpath[i]);
		levels[i].game = this;
		}
	
		player.move(levels[0].getField(3, 3));
		
		
	}
	
	
	//führt den nächsten Schritt des Spiels aus;
	public void gameUpdate() {
		player.act();
		
	}
	//wechselt zum Level mit der angegebenen ID
	public void changeLevel(int id) {
		currentLevelId = id;
		player.move(levels[currentLevelId].entrance, false);
	}

}
