package com.github.propra13.gruppe43;
import java.awt.*;
import java.awt.image.BufferedImage;
import java.io.*;

import javax.imageio.ImageIO;

public class LevelShower extends Component{
	final Level level = new Level();
	BufferedImage img;
	
	public void init () {

		level.init("test.txt");
	}
	
	public void paint(Graphics g) {
			int width = 32;
			int height = 32;
			for (int i=0; i<level.size_x;i++) {
				for (int j=0; j<level.size_y;j++) {
					g.drawImage(level.getField(i, j).img, i*width+i, j*height+j, width+1, height+1, null);
				}
			}
		}
		


}
