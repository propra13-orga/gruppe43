package com.github.propra13.gruppe43;
import java.awt.image.*;
import java.util.*;
public class Unit{
	// energy wird benötigt um zu handeln
	final int ENERGY_MAX = 1000;
	public int energy = ENERGY_MAX;
	public int energyGain;
	//Darstellung des unitrs
	BufferedImage img;
	//Feld auf dem sich der unitr befindet
	Field field;
	
	public Unit(BufferedImage i) {
		img = i;
	}
	public void act() {
		
	}
	
	public void move(Field t) {
		if (!t.isOccupied()) {
			t.unit = this;
			field.unit = null;
			this.field = t;
					
		}
		
	}
	

}
