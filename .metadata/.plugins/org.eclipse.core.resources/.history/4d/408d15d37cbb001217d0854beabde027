package com.github.propra13.gruppe43;
import java.awt.image.*;
import java.util.*;
public class Actor{
	// energy wird benötigt um zu handeln
	final int ENERGY_MAX = 1000;
	public int energy = ENERGY_MAX;
	public int energyGain = ENERGY_MAX / 300;
	// Aktion, die ausgeführt wird
	public int currentAction = Actor.MOVE;
	//Aktionen
	final static int MOVE = 0;
	
	//Bewegungsrichtung:
	public int movex, movey;
	
	//Feld auf dem sich Actor befindet
	Field field = null;
	
	public Actor() {
	}
	//bewegt den Actor auf das angegebene Feld, gibt true aus, falls dies erfolgreich ist, sonst false
	public boolean move(Field t) {
		if (!t.isOccupied() &&  t.x < t.level.size_x && t.y < t.level.size_y && t.x >=0 && t.y >=0) {
			t.actor = this;
			if (field != null) {
			field.actor = null;
			}
			this.field = t;
			return true;
					
		}
		return false;
	}
		
	}
	
	public void act() {
		
	}
	

}
